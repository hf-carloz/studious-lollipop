<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gantt Chart - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/custom/style.css" />
</head>

<body>
    <div class="row">
        <div class="container">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Gantt Chart", "Index", "Dashboard", new { area = "" }, new { @class= "navbar-brand"})
                    @*@Html.ActionLink("Home", "Index", "Home", new { area = "haha?"}, new { @class= "navbar-brand"})*@
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Dashboard")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    <ul class="nav navbar-nav" style="float:right;     margin-right: 15px;">
                        @if(Session["LoggedIn"] == null)
                        {
                            <li>@Html.ActionLink("Register", "Register", "Login")</li>
                        }
                        else if(Convert.ToInt32(Session["LoggedIn"]) == 2)
                        {
                            <li>@Html.ActionLink("Login", "Index", "Login")</li>
                        }
                        else if (Convert.ToInt32(Session["LoggedIn"]) == 1)
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Session["Username"] <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu" style="margin-right: 30px; min-width:inherit;">
                                    <li><a href="/Profile/Index">Profile</a></li>
                                    <li><a href="#">Settings</a></li>
                                    <li class="divider"></li>
                                    <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row center-block">
            @RenderBody()
        </div>
        <div class="row" style="bottom:0; position:absolute;width:inherit;">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - <a href="http://fetp.ph" target="_blank">Fujitsu Engineering Technologies Philippines, Inc.</a></p>
            </footer>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $('.datepicker').datepicker(); //Initialize any date pickers
    </script>

